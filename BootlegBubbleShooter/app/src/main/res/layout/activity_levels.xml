<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3DFF3"
    tools:context=".Levels">

    <TextView
        android:id="@+id/QuestionBox"
        android:layout_width="376dp"
        android:layout_height="227dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="583dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="36dp"
        android:text="Question Goes HERE!!!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:layout_marginBottom="75dp"
        android:background="#00B62828"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/CloudA"
        app:layout_constraintEnd_toStartOf="@+id/pauseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="22dp"
        android:text="Pause"
        app:layout_constraintBottom_toTopOf="@+id/CloudC"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/CloudA"
        android:layout_width="222dp"
        android:layout_height="77dp"
        android:src="@drawable/clouda"
        tools:layout_editor_absoluteX="-46dp"
        tools:layout_editor_absoluteY="80dp" />

    <ImageView
        android:id="@+id/CloudB"
        android:layout_width="257dp"
        android:layout_height="83dp"
        android:src="@drawable/cloudb"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="157dp" />

    <ImageView
        android:id="@+id/CloudC"
        android:layout_width="298dp"
        android:layout_height="78dp"
        android:src="@drawable/cloudc"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="50dp" />

    <ImageView
        android:id="@+id/CloudD"
        android:layout_width="265dp"
        android:layout_height="78dp"
        android:src="@drawable/cloudd"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="124dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="201dp"
        android:background="#C3DFF3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CloudB"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rocket" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bullet"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="307dp" />

</androidx.constraintlayout.widget.ConstraintLayout>