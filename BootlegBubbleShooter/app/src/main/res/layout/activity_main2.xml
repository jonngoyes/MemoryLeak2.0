<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/space"
    tools:context=".MainActivity2"
    >

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/bgbtn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textScreen"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="foofeefoofoofaa
            (Am I telling the truth?)"
            android:textColor="#5151E5"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="304dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/spacedensmore" />

    <ProgressBar
        android:id="@+id/boss"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="423dp"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:max="100"
        android:progress="100"
        android:visibility="visible"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:background="@drawable/bgquestion"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:lineSpacingExtra="6dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#5151E5" />

    </LinearLayout>

    <Button
        android:id="@+id/trueButton"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgpurple"
        android:soundEffectsEnabled="true"
        android:text="TRUE"
        android:textColor="#5151E5"
        android:textSize="20sp" />


    <Button
        android:id="@+id/falseButton"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgpurple"
        android:text="False"
        android:textColor="#5151E5"
        android:textSize="20sp"/>

    <ProgressBar
        android:id="@+id/user"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#1F9922"
        android:max="100"
        android:progress="100"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="#FFF"
        android:textSize="30sp"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>